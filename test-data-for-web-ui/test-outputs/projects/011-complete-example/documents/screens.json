{
  "project_id": "011-complete-example",
  "project_name": "User Profile Settings",
  "screens": [
    {
      "id": "profile-overview",
      "name": "Profile Overview",
      "route": "/settings/profile",
      "description": "Main profile settings page showing user information with tabs for different settings sections",
      "wireframe": {
        "type": "stack",
        "gap": "lg",
        "children": [
          {
            "type": "nav",
            "text": "Settings",
            "children": [
              { "type": "avatar", "size": "sm" }
            ]
          },
          {
            "type": "row",
            "padding": "lg",
            "gap": "xl",
            "children": [
              {
                "type": "sidebar",
                "children": [
                  { "type": "button", "text": "Profile", "variant": "secondary", "fullWidth": true },
                  { "type": "button", "text": "Account", "variant": "ghost", "fullWidth": true },
                  { "type": "button", "text": "Privacy", "variant": "ghost", "fullWidth": true },
                  { "type": "button", "text": "Notifications", "variant": "ghost", "fullWidth": true },
                  { "type": "divider" },
                  { "type": "button", "text": "Sign Out", "variant": "ghost", "fullWidth": true }
                ]
              },
              {
                "type": "stack",
                "gap": "lg",
                "width": "full",
                "children": [
                  { "type": "heading", "text": "Profile Settings", "size": "xl" },
                  { "type": "text", "text": "Manage your public profile information", "color": "muted" },
                  {
                    "type": "card",
                    "padding": "lg",
                    "children": [
                      {
                        "type": "stack",
                        "gap": "lg",
                        "children": [
                          {
                            "type": "row",
                            "align": "center",
                            "gap": "lg",
                            "children": [
                              { "type": "avatar", "size": "lg" },
                              {
                                "type": "stack",
                                "gap": "sm",
                                "children": [
                                  { "type": "heading", "text": "Profile Photo", "size": "md" },
                                  { "type": "text", "text": "JPG, PNG or GIF. Max 2MB.", "size": "sm", "color": "muted" },
                                  {
                                    "type": "row",
                                    "gap": "sm",
                                    "children": [
                                      { "type": "button", "text": "Upload", "variant": "outline" },
                                      { "type": "button", "text": "Remove", "variant": "ghost" }
                                    ]
                                  }
                                ]
                              }
                            ]
                          },
                          { "type": "divider" },
                          {
                            "type": "grid",
                            "columns": 2,
                            "gap": "md",
                            "children": [
                              { "type": "input", "label": "First Name", "placeholder": "John", "fullWidth": true },
                              { "type": "input", "label": "Last Name", "placeholder": "Doe", "fullWidth": true }
                            ]
                          },
                          { "type": "input", "label": "Display Name", "placeholder": "@johndoe", "fullWidth": true },
                          { "type": "textarea", "label": "Bio", "placeholder": "Tell us about yourself...", "fullWidth": true },
                          { "type": "input", "label": "Website", "placeholder": "https://example.com", "fullWidth": true }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "row",
                    "justify": "end",
                    "gap": "sm",
                    "children": [
                      { "type": "button", "text": "Cancel", "variant": "ghost" },
                      { "type": "button", "text": "Save Changes", "variant": "primary" }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      "notes": "The sidebar should remain fixed on scroll. Consider adding unsaved changes warning.",
      "components_to_reuse": [
        { "name": "Button", "path": "components/ui/Button.tsx" },
        { "name": "Input", "path": "components/ui/Input.tsx" },
        { "name": "Card", "path": "components/ui/Card.tsx" },
        { "name": "Avatar", "path": "components/ui/Avatar.tsx" }
      ],
      "components_to_create": [
        { "name": "SettingsSidebar", "path": "components/settings/SettingsSidebar.tsx" },
        { "name": "PhotoUploader", "path": "components/settings/PhotoUploader.tsx" }
      ]
    },
