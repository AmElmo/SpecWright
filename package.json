{
  "name": "specwright",
  "version": "3.0.1",
  "description": "AI-Powered Specification Engine - Transform Ideas into Specs",
  "type": "module",
  "main": "dist/specwright.js",
  "bin": {
    "specwright": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:cli && npm run build:ui",
    "build:cli": "tsc --emitDeclarationOnly && babel src --out-dir dist --extensions .ts,.tsx --ignore \"**/web-ui/**\" --copy-files",
    "build:ui": "vite build src/web-ui --outDir ../../dist/web-ui",
    "dev": "SPECWRIGHT_DEBUG=true tsx src/specwright.ts",
    "dev:ui": "vite src/web-ui",
    "dev:server": "SPECWRIGHT_DEBUG=true tsx src/web-server.ts",
    "dev:trace": "SPECWRIGHT_TRACE=true SPECWRIGHT_DEBUG=true tsx src/specwright.ts",
    "dev:ui:trace": "SPECWRIGHT_TRACE=true vite src/web-ui",
    "dev:server:trace": "SPECWRIGHT_TRACE=true SPECWRIGHT_DEBUG=true tsx src/web-server.ts",
    "start": "node dist/specwright.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "cli",
    "developer-tools",
    "automation",
    "specification-driven-development",
    "cursor"
  ],
  "author": "Julien Berthomier <julien@argil.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amelmo/specwright.git"
  },
  "bugs": {
    "url": "https://github.com/amelmo/specwright/issues"
  },
  "homepage": "https://github.com/amelmo/specwright#readme",
  "files": [
    "dist/",
    "templates/",
    "agents/",
    ".cursor/",
    ".cursorrules"
  ],
  "dependencies": {
    "@linear/sdk": "^68.1.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.0",
    "cli-table3": "^0.6.5",
    "clsx": "^2.1.1",
    "consola": "^3.4.2",
    "express": "^4.19.2",
    "gpt-3-encoder": "^1.1.4",
    "inquirer": "^9.2.20",
    "lucide-react": "^0.378.0",
    "open": "^10.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.23.1",
    "remark-gfm": "^4.0.0",
    "string-width": "^7.2.0",
    "tailwind-merge": "^2.3.0",
    "terminal-link": "^5.0.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.2.11"
  }
}
